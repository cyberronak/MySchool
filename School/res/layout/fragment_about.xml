<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize"
    android:fitsSystemWindows="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="120dp"
            android:padding="8dp" >

            <ImageView
                android:id="@+id/logo_address"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_pin" />

            <TextView
                android:id="@+id/lbl_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/map_logo"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Address:"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/txt_address"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lbl_address"
                android:layout_marginRight="50dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/map_logo"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="80dp"
            android:padding="8dp" >

            <ImageView
                android:id="@+id/logo_mail"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_mail" />

            <TextView
                android:id="@+id/lbl_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/mail_logo"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Email:"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/txt_email"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lbl_email"
                android:layout_marginRight="50dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/mail_logo"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="80dp"
            android:padding="8dp" >

            <ImageView
                android:id="@+id/logo_contact"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_call" />

            <TextView
                android:id="@+id/lbl_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/contact_logo"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Contect:"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/txt_contact"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lbl_contact"
                android:layout_marginRight="50dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/contact_logo"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="120dp"
            android:padding="8dp" >

            <ImageView
                android:id="@+id/logo_desc"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_description" />

            <TextView
                android:id="@+id/lbl_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/desc_logo"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Description:"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/txt_desc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lbl_desc"
                android:layout_marginTop="5dp"
                android:layout_marginRight="50dp"
                android:layout_toLeftOf="@+id/desc_logo"/>
        </RelativeLayout>
    </LinearLayout>

</ScrollView>